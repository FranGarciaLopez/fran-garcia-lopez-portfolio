---
import type { GetStaticPaths } from "astro";
import projectData from "../../../../data/projects.json";
import ProjectFeatures from "../../../../components/ProjectsFeatures.astro";
import Layout from "../../../../layouts/Layout.astro";
import BentoGrid from "../../../../components/BentoGrid.astro";
import TestingDetails from "../../../../components/TestingDetails.astro";
import TelegramBotSimulation from "../../../../components/TelegramBotSimulation.astro";

export const getStaticPaths: GetStaticPaths = async () => {
  const locales = ["es", "en"];
  return projectData.projects.flatMap((project) =>
    locales.map((lang) => ({
      params: { lang, id: project.id.toString() },
      props: { project, lang },
    }))
  );
};

interface AlgorithmFeature {
  description: string;
  benefits?: string[];
  steps?: string[];
}

interface Project {
  id: number;
  name: { en: string; es: string };
  description: { en: { text: string }[]; es: { text: string }[] };
  role: { en: string; es: string };
  institution: string | { en: string; es: string };
  timeframe: { en: string; es: string };
  github_repositories?: string[];
  url: string;
  images: string[];
  algorithm_features: {
    titles: { en: string; es: string };
    en: Record<string, string>;
    es: Record<string, string>;
  };
  end_to_end_testing_with_vitest: {
    en: { description: { text: string }[] };
    es: { description: { text: string }[] };
  };
}

const { project, lang } = Astro.props as {
  project: Project;
  lang: "en" | "es";
};

const repositories = project.github_repositories || [];
---

<Layout title={`Project | ${project.name[lang]}`} lang={lang}>
  <head>
    <title>{project.name} - Fran García López</title>
    <meta
      name="description"
      content={project.description[lang].map((d) => d.text).join(" ")}
    />
    <link
      rel="canonical"
      href={`https://fran-garcia-lopez.com/${lang}/projects/${project.id}/`}
    />
  </head>

  <section
    class="relative min-h-screen bg-gradient-to-br from-[#1a1d21] via-[#222428] to-[#2a2d31] text-white
    px-4 md:px-8 lg:px-16
    py-8 md:py-12 lg:py-20 overflow-hidden"
  >
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 pointer-events-none overflow-hidden opacity-30">
      <div class="absolute top-20 left-10 w-72 h-72 bg-[#c2b280]/10 rounded-full blur-3xl animate-pulse-slow"></div>
      <div class="absolute bottom-40 right-20 w-96 h-96 bg-[#f5f5dc]/10 rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 2s;"></div>
      <div class="absolute top-1/2 left-1/3 w-64 h-64 bg-[#bca177]/10 rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 4s;"></div>
    </div>

    <div class="max-w-7xl mx-auto relative z-10">
      <!-- Botón Volver -->
      <button
        type="button"
        class="group inline-flex items-center gap-2 text-[#eae0d5] bg-black/30 backdrop-blur-sm border-2 border-[#c2b280]/30 rounded-xl py-3 px-5 hover:bg-[#c2b280] hover:border-[#c2b280] hover:text-black transition-all duration-300 shadow-lg hover:shadow-[#c2b280]/20 hover:shadow-2xl transform hover:-translate-x-1"
        onclick="window.history.back()"
      >
        <svg class="w-6 h-6 transition-transform duration-300 group-hover:-translate-x-1" fill="currentColor" viewBox="0 0 20 20">
          <path
            fill-rule="evenodd"
            d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z"
            clip-rule="evenodd"></path>
        </svg>
        <span class="font-semibold">Back</span>
      </button>

      <!-- Título del Proyecto -->
      <div class="mt-10 md:mt-12 space-y-4">
        <h1
          class="text-4xl md:text-6xl lg:text-7xl font-bold tracking-tight text-transparent bg-clip-text bg-gradient-to-r from-[#f5f5dc] via-[#eae0d5] to-[#c2b280] leading-tight animate-fade-in"
        >
          {project.name[lang]}
        </h1>
        <div class="h-1 w-32 bg-gradient-to-r from-[#c2b280] via-[#f5f5dc] to-transparent rounded-full"></div>
      </div>

      <!-- Botón de Ver Proyecto -->
      <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-4 lg:gap-6">
        <!-- Botón de Ver Proyecto -->
        {
          project.url && (
            <a
              href={project.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group relative inline-flex items-center justify-center gap-3 text-black font-bold bg-gradient-to-r from-[#eae0d5] to-[#f5f5dc] text-lg rounded-xl hover:from-[#c2b280] hover:to-[#d4c19c] transition-all duration-300 py-4 px-8 text-center w-full shadow-xl hover:shadow-2xl hover:shadow-[#c2b280]/30 transform hover:-translate-y-1 overflow-hidden"
            >
              <span class="relative z-10 flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                Check the Project
                <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
              </span>
              <span class="absolute inset-0 bg-gradient-to-r from-[#bca177] to-[#c2b280] translate-y-full group-hover:translate-y-0 transition-transform duration-300"></span>
            </a>
          )
        }

        <!-- Repositorios GitHub -->
        {
          repositories.length > 0 && (
            <div class="grid grid-cols-1 gap-4 w-full">
              {repositories.map((repoUrl) => {
                // Extract repository name from URL
                const repoName = repoUrl.split("/").pop();
                return (
                  <a
                    href={repoUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="group relative inline-flex items-center justify-center gap-3 text-black font-bold bg-gradient-to-r from-[#eae0d5] to-[#f5f5dc] text-lg rounded-xl hover:from-[#c2b280] hover:to-[#d4c19c] transition-all duration-300 py-4 px-8 text-center w-full shadow-xl hover:shadow-2xl hover:shadow-[#c2b280]/30 transform hover:-translate-y-1 overflow-hidden"
                  >
                    <span class="relative z-10 flex items-center gap-2">
                      <svg
                        class="w-6 h-6"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                      </svg>
                      {repoName}
                      <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z"></path>
                        <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z"></path>
                      </svg>
                    </span>
                    <span class="absolute inset-0 bg-gradient-to-r from-[#bca177] to-[#c2b280] translate-y-full group-hover:translate-y-0 transition-transform duration-300"></span>
                  </a>
                );
              })}
            </div>
          )
        }
      </div>

      <!-- Descripción -->
      <div
        class="mt-10 md:mt-12 space-y-6 text-lg md:text-xl lg:text-2xl text-gray-300 leading-relaxed"
      >
        {
          project.description[lang].map((descObj, index) => (
            <p class="p-6 md:p-8 bg-gradient-to-br from-black/40 to-black/20 backdrop-blur-sm border border-[#c2b280]/20 rounded-2xl shadow-xl hover:border-[#c2b280]/40 transition-all duration-300 hover:shadow-2xl hover:shadow-[#c2b280]/10 animate-fade-in" style={`animation-delay: ${index * 0.1}s`}>
              {descObj.text}
            </p>
          ))
        }
      </div>

      {
        project.id === 2 && (
          <div class="mt-16 md:mt-20">
            <div class="relative">
              <h2
                class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight text-transparent bg-clip-text bg-gradient-to-r from-[#f5f5dc] to-[#c2b280] leading-tight mb-8"
              >
                {lang === "es"
                  ? "Simulación de Bot de Telegram"
                  : "Telegram Bot Simulation"}
              </h2>
              <div class="h-1 w-24 bg-gradient-to-r from-[#c2b280] to-transparent rounded-full mb-8"></div>
            </div>
            <TelegramBotSimulation lang={lang} />
          </div>
        )
      }

      <!-- Imágenes -->
      {
        project.id !== 2 && (
          <div class="mt-16 md:mt-20">
            <BentoGrid project_images={project.images} class="mt-4" />
          </div>
        )
      }

      <!-- Características del Algoritmo -->
      {
        project.algorithm_features && (
          <div class="mt-16 md:mt-20">
            <div class="relative mb-8">
              <h2
                class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight text-transparent bg-clip-text bg-gradient-to-r from-[#f5f5dc] to-[#c2b280] leading-tight"
              >
                {project.algorithm_features.titles[lang]}
              </h2>
              <div class="h-1 w-24 bg-gradient-to-r from-[#c2b280] to-transparent rounded-full mt-4"></div>
            </div>
            <ProjectFeatures
              algorithm_features={project.algorithm_features[lang]}
            />
          </div>
        )
      }

      <!-- Testing Details -->
      <div class="mt-16 md:mt-20">
        <TestingDetails
          testingDetails={project.end_to_end_testing_with_vitest?.[lang]}
          lang={lang}
        />
      </div>

      <!-- Detalles Adicionales -->
      <div class="mt-16 md:mt-20 bg-gradient-to-br from-black/50 to-black/30 backdrop-blur-md border-2 border-[#c2b280]/30 rounded-2xl p-8 md:p-10 shadow-2xl hover:border-[#c2b280]/50 transition-all duration-300">
        <h3 class="text-2xl md:text-3xl font-bold text-[#f5f5dc] mb-6 flex items-center gap-3">
          <svg class="w-8 h-8 text-[#c2b280]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          {lang === "es" ? "Detalles del Proyecto" : "Project Details"}
        </h3>
        
        <div class="space-y-6 text-base md:text-lg">
          <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4 p-4 bg-black/30 rounded-xl border border-[#c2b280]/20 hover:border-[#c2b280]/40 transition-colors duration-300">
            <strong class="text-[#c2b280] font-bold text-lg flex items-center gap-2 min-w-[140px]">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              {lang === "es" ? "Rol:" : "Role:"}
            </strong>
            <span class="text-gray-300">{project.role[lang]}</span>
          </div>

          <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4 p-4 bg-black/30 rounded-xl border border-[#c2b280]/20 hover:border-[#c2b280]/40 transition-colors duration-300">
            <strong class="text-[#c2b280] font-bold text-lg flex items-center gap-2 min-w-[140px]">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              {lang === "es" ? "Institución:" : "Institution:"}
            </strong>
            {
              typeof project.institution === "string" ? (
                project.institution.includes("MiduDev") ? (
                  <span class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-blue-500/20 to-blue-600/20 border border-blue-400/40 rounded-lg text-blue-300 font-semibold">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                    {lang === "es"
                      ? "Inspirado en el tutorial de MiduDev"
                      : "Inspired by MiduDev's tutorial"}
                  </span>
                ) : (
                  <span class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-yellow-500/20 to-yellow-600/20 border border-yellow-400/40 rounded-lg text-yellow-300 font-semibold">
                    {project.institution}
                  </span>
                )
              ) : (
                <span class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-blue-500/20 to-blue-600/20 border border-blue-400/40 rounded-lg text-blue-300 font-semibold">
                  {project.institution[lang]}
                </span>
              )
            }
          </div>

          <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4 p-4 bg-black/30 rounded-xl border border-[#c2b280]/20 hover:border-[#c2b280]/40 transition-colors duration-300">
            <strong class="text-[#c2b280] font-bold text-lg flex items-center gap-2 min-w-[140px]">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              {lang === "es" ? "Período:" : "Timeframe:"}
            </strong>
            <span class="text-gray-300">{project.timeframe[lang]}</span>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Fade In Animation */
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out forwards;
    opacity: 0;
  }

  /* Pulse Slow Animation */
  @keyframes pulse-slow {
    0%, 100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.05);
    }
  }

  .animate-pulse-slow {
    animation: pulse-slow 6s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  /* Smooth Scrolling */
  html {
    scroll-behavior: smooth;
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    const projectLoader = document.getElementById("project-loader");
    const projectContent = document.getElementById("project-content");

    // Si hay un loader, lo ocultamos al cargar
    if (document.readyState === "complete") {
      if (projectLoader && projectContent) {
        projectLoader.style.display = "none";
        projectContent.style.opacity = "1";
      }
    } else {
      window.addEventListener("load", () => {
        if (projectLoader && projectContent) {
          projectLoader.style.display = "none";
          projectContent.style.opacity = "1";
        }
      });
    }
  });
</script>
