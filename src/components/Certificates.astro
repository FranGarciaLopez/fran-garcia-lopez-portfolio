---
const certificates = [
  {
    title: "Full Stack Developer Master's degree",
    file: "/certificates/master-full-stack-nuclio-cert.webp",
  },
  {
    title: "Aprende a programar con Python",
    file: "/certificates/aprende-a-programar-con-python.webp",
  },
  {
    title: "Aprende git",
    file: "/certificates/aprende-git.webp",
  },
  {
    title: "Curso de web scraping con Python",
    file: "/certificates/web-scraping-cert.webp",
  },
  {
    title: "Crea tu sistema de productividad con Notion",
    file: "/certificates/curso-intensivo-con-notion.webp",
  },
];

// Repeat 6 times to ensure enough content for wide screens
const repeated = Array(6).fill(certificates).flat();
---

<style>
  @keyframes marquee {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-marquee {
    animation: marquee 25s linear infinite;
  }

  .animate-marquee2 {
    animation: marquee 25s linear infinite;
    animation-delay: 12.5s;
  }
</style>

<div class="relative flex overflow-x-hidden py-10 bg-[#222428]">
  <div class="animate-marquee flex whitespace-nowrap gap-8">
    {
      repeated.map((c, i) => (
        <a
          href={c.file}
          target="_blank"
          rel="noopener noreferrer"
          class="min-w-[250px] max-w-[300px] bg-[#2d2d2d] p-4 rounded-lg shadow-md hover:scale-105 transition-transform"
          key={`cert-${i}`}
        >
          <img
            src={c.file}
            alt={c.title}
            class="w-full h-auto object-cover rounded"
            loading="lazy"
          />
        </a>
      ))
    }
  </div>
</div>
