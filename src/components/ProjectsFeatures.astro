---
interface AlgorithmFeature {
          description: string;
          benefits?: string[];
          steps?: string[];
}

interface AlgorithmFeatures {
          [key: string]: AlgorithmFeature;
}

const { algorithm_features } = Astro.props as {
          algorithm_features: AlgorithmFeatures;
};
---

<div class="container mx-auto max-w-7xl space-y-12 px-4 sm:px-6 lg:px-8">
          <h2
                    class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-serif leading-tight tracking-wide text-[#f5f5dc] uppercase text-start"
          >
                    Algorithm <span class="italic text-[#eae0d5]">Features</span
                    >
          </h2>
          {
                    Object.entries(algorithm_features).map(([key, feature]) => (
                              <div class="border border-[#44484d] p-6 sm:p-8 rounded-lg bg-[#1a1c1e] transform transition-all duration-500 hover:bg-gradient-to-t from-[#2c2f36] via-[#3c4049] to-[#4a4e58] hover:shadow-2xl hover:scale-105">
                                        <h3 class="text-xl sm:text-2xl md:text-3xl font-serif tracking-wide text-[#f5f5dc] capitalize">
                                                  {key.replace(/_/g, " ")}
                                        </h3>
                                        <p class="text-lg sm:text-xl md:text-2xl text-[#a1a1aa] mt-4 leading-relaxed py-2 tracking-wide">
                                                  {feature.description}
                                        </p>

                                        {feature.benefits && (
                                                  <ul class="list-disc list-inside text-[#c2b280] mt-4 space-y-3">
                                                            {feature.benefits.map(
                                                                      (
                                                                                benefit,
                                                                      ) => (
                                                                                <li class="leading-relaxed text-lg sm:text-xl md:text-2xl">
                                                                                          {
                                                                                                    benefit
                                                                                          }
                                                                                </li>
                                                                      ),
                                                            )}
                                                  </ul>
                                        )}

                                        {feature.steps && (
                                                  <ol class="list-decimal list-inside text-[#eae0d5] mt-4 space-y-3">
                                                            {feature.steps.map(
                                                                      (
                                                                                step,
                                                                      ) => (
                                                                                <li class="leading-relaxed text-lg sm:text-xl md:text-2xl">
                                                                                          {
                                                                                                    step
                                                                                          }
                                                                                </li>
                                                                      ),
                                                            )}
                                                  </ol>
                                        )}
                              </div>
                    ))
          }
</div>
