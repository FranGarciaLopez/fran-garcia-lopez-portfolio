---
import { getTranslation } from "../i18n/getTranslation";
const { lang } = Astro.props;

import HeroSkeleton from "../skeletons/HeroSkeleton.astro";
---

<section
       class="relative w-full min-h-screen text-white flex items-center justify-center px-4 pb-0 sm:px-8 md:px-12 overflow-hidden"
>
       <!-- Animated Background Elements -->
       <div class="absolute inset-0 pointer-events-none overflow-hidden opacity-20">
              <div class="absolute top-20 right-20 w-96 h-96 bg-[#c2b280]/20 rounded-full blur-3xl animate-float"></div>
              <div class="absolute bottom-40 left-20 w-80 h-80 bg-[#f5f5dc]/20 rounded-full blur-3xl animate-float-delayed"></div>
              <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-[#bca177]/10 rounded-full blur-3xl animate-pulse-slow"></div>
       </div>

       <!-- Skeleton Loader (Initial) -->
       <div
              id="hero-loader"
              class="absolute inset-0 flex items-center justify-center z-10"
       >
              <HeroSkeleton />
       </div>

       <!-- Actual Hero Content (Hidden by Default) -->
       <div id="hero-content" class="max-w-5xl text-center m-4 relative z-20 opacity-0 transition-opacity duration-1000">
              <!-- Main Title with Gradient -->
              <div class="mb-8">
                     <h1
                            class="text-[8vw] sm:text-[6vw] md:text-[5vw] lg:text-[4vw] font-bold leading-tight tracking-tight text-transparent bg-clip-text bg-gradient-to-r from-[#f5f5dc] via-[#eae0d5] to-[#c2b280] uppercase drop-shadow-2xl"
                     >
                            {getTranslation(lang, "hero", "title")}
                     </h1>
                     <!-- Decorative line -->
                     <div class="h-1 w-32 mx-auto mt-6 bg-gradient-to-r from-transparent via-[#c2b280] to-transparent rounded-full"></div>
              </div>

              <!-- Subtitle with Dynamic Text -->
              <p
                     class="mt-6 text-lg sm:text-xl md:text-2xl lg:text-3xl italic text-gray-300 leading-relaxed max-w-3xl mx-auto"
              >
                     {getTranslation(lang, "hero", "subtitle")}
                     <span class="block mt-4 text-[#c2b280] font-bold text-2xl sm:text-3xl md:text-4xl not-italic animate-pulse-text" id="dev-name"
                            >Fran García López.</span
                     >
