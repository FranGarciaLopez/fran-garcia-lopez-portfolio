<style>
       /* Float Animation */
       @keyframes float {
              0%, 100% {
                     transform: translate(0, 0) scale(1);
              }
              33% {
                     transform: translate(30px, -30px) scale(1.1);
              }
              66% {
                     transform: translate(-20px, 20px) scale(0.9);
              }
       }

       .animate-float {
              animation: float 20s ease-in-out infinite;
       }

       .animate-float-delayed {
              animation: float 25s ease-in-out infinite;
              animation-delay: 5s;
       }

       /* Pulse Slow Animation */
       @keyframes pulse-slow {
              0%, 100% {
                     opacity: 0.2;
                     transform: translate(-50%, -50%) scale(1);
              }
              50% {
                     opacity: 0.3;
                     transform: translate(-50%, -50%) scale(1.05);
              }
       }

       .animate-pulse-slow {
              animation: pulse-slow 8s cubic-bezier(0.4, 0, 0.6, 1) infinite;
       }

       /* Text Pulse Animation */
       @keyframes pulse-text {
              0%, 100% {
                     opacity: 1;
                     transform: scale(1);
              }
              50% {
                     opacity: 0.8;
                     transform: scale(1.02);
              }
       }

       .animate-pulse-text {
              animation: pulse-text 3s ease-in-out infinite;
       }
</style>

<script>
       document.addEventListener("astro:page-load", () => {
              const heroContent = document.getElementById("hero-content");
              const heroLoader = document.getElementById("hero-loader");

              if (document.readyState === "complete") {
                     if (heroContent && heroLoader) {
                            heroContent.style.opacity = "1";
                            heroLoader.style.display = "none";
                     }
              } else {
                     window.addEventListener("load", () => {
                            if (heroContent && heroLoader) {
                                   heroContent.style.opacity = "1";
                                   heroLoader.style.display = "none";
                            }
                     });
              }
       });

       document.addEventListener("astro:page-load", () => {
              function showContent() {
                     const heroContent =
                            document.getElementById("hero-content");
                     const heroLoader = document.getElementById("hero-loader");

                     if (heroContent && heroLoader) {
                            heroContent.style.opacity = "1";
                            heroLoader.style.display = "none";
                     }
              }

              if (document.readyState === "complete") {
                     showContent();
              } else {
                     window.addEventListener("load", showContent);
              }

              /* typewriter for the h1 */
              const h1 = document.querySelector("h1");
              const h1Text = h1?.textContent;
              if (!h1Text) return;
              h1.textContent = "";

              for (let i = 0; i < h1Text.length; i++) {
                     setTimeout(() => {
                            h1.textContent += h1Text[i];
                     }, 150 * i);
              }

              const spanName = document.querySelector("p > span#dev-name");
              const spanText = spanName?.textContent;
              if (!spanText) return;
              spanName.textContent = "";

              const names = [
                     "Fran García López",
                     "a Developer",
                     "a Team Player",
                     "a Dancer",
                     "a Traveler",
                     "Fran García López",
              ];

              const duration = 20;
              for (let i = 0; i < names.length; i++) {
                     setTimeout(
                            () => {
                                   spanName.textContent = names[i];
                            },
                            150 * i * duration,
                     );
              }
       });
</script>
