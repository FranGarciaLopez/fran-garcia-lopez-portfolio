---
import projectData from "../data/projects.json";
const projects = projectData.projects;
---

<script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>

<section id="projects" class="w-full pt-8">
          {projects.map((project, index) => (
            <div
              class={`relative w-full min-h-[55vh] md:min-h-[90vh] flex flex-col md:flex-row items-center justify-center px-4 sm:px-8 md:px-16 ${
                index % 2 === 0 ? "md:justify-start" : "md:justify-end"
              }`}
            >
              <!-- Project Image -->
              <a class="relative max-w-2xl w-full" href={`/projects/${project.id}`}>
                <div
                  class="rounded-lg overflow-hidden shadow-lg"
                  style={`background-image: url('${project["bg-image"]}'); background-size: cover; background-position: center;`}
                >
                  <img
                    src={project["bg-image"]}
                    alt={project.name}
                    class="w-full h-full object-cover transition-transform duration-700 hover:scale-105"
                  />
                </div>
              </a>
        
              <!-- Project Title -->
              <div class={`absolute bottom-4 sm:bottom-8 w-full px-4 sm:px-8 md:px-16 ${index % 2 === 0 ? 'right-0 text-right' : 'left-0 text-left'}`}>
    <h3
      class="text-2xl sm:text-4xl md:text-5xl lg:text-6xl font-serif tracking-wide leading-snug text-[#c2b280]"
    >
      {project.name}
    </h3>
  </div>
            </div>
          ))}
        </section>
        