---
import projectData from "../data/projects.json";
const projects = projectData.projects;
---

<script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>

<section id="projects" class="w-full px-6 md:px-16 lg:px-24 xl:px-32">
  {projects.map((project, index) => (
    <div
      class={`relative w-full min-h-[55vh] flex flex-col md:flex-row items-center 
              lg:gap-8 xl:gap-12 ${
                index % 2 === 0 
                  ? "md:flex-row-reverse md:justify-start lg:justify-center"
                  : "md:flex-row md:justify-end lg:justify-center"
              }`}
    >
      <!-- Project Image -->
      <a class="relative max-w-2xl w-full mt-4" href={`/projects/${project.id}`}>
        <div
          class="rounded-lg overflow-hidden shadow-lg"
          style={`background-image: url('${project["bg-image"]}'); background-size: cover; background-position: center;`}
        >
          <img
            src={project["bg-image"]}
            alt={project.name}
            class="w-full h-full object-cover transition-transform duration-700 hover:scale-105"
          />
        </div>
      </a>

      <!-- Project Title -->
      <div
        class={`relative lg:relative lg:w-auto lg:max-w-lg ${
          index % 2 === 0 
            ? "md:text-left lg:text-center" 
            : "md:text-right lg:text-center"
        }`}
      >
        <h3 class="text-3xl md:text-4xl lg:text-6xl font-serif tracking-wide leading-snug text-[#c2b280] lg:leading-tight">
          {project.name}
        </h3>
      </div>
    </div>
  ))}
</section>
