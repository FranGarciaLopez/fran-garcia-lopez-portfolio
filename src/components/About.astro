<script>
          document.addEventListener("DOMContentLoaded", () => {
                    const accordions =
                              document.querySelectorAll('[id^="content"]');
                    const icons = document.querySelectorAll('[id^="icon"]');

                    const toggleAccordion = (id) => {
                              accordions.forEach((content) => {
                                        if (content.id !== id) {
                                                  content.classList.add(
                                                            "max-h-0",
                                                  );
                                                  content.classList.remove(
                                                            "max-h-[500px]",
                                                  );
                                        }
                              });

                              icons.forEach((icon) => {
                                        if (icon.id !== `icon${id.slice(-1)}`) {
                                                  icon.classList.remove(
                                                            "rotate-180",
                                                  );
                                        }
                              });

                              const content = document.getElementById(id);
                              const button = content?.previousElementSibling;
                              const icon =
                                        button?.querySelector(
                                                  "span:last-child",
                                        );

                              if (content?.classList.contains("max-h-0")) {
                                        content?.classList.remove("max-h-0");
                                        content?.classList.add(
                                                  "max-h-[1000px]",
                                        );
                                        icon.classList.add("rotate-180");
                              } else {
                                        content?.classList.add("max-h-0");
                                        content?.classList.remove(
                                                  "max-h-[1000px]",
                                        );
                                        icon.classList.remove("rotate-180");
                              }
                    };

                    // Function to unlock the key element
                    window.unlockKey = () => {
                              const secretKey =
                                        document.getElementById("secret-key");
                              if (secretKey) {
                                        secretKey.classList.remove("hidden");
                              }
                    };

                    // Function to reveal the classified content
                    window.revealAccordions = () => {
                              const classifiedInfo =
                                        document.getElementById(
                                                  "classified-info",
                                        );
                              const secretKey =
                                        document.getElementById("secret-key");

                              if (classifiedInfo) {
                                        classifiedInfo.classList.remove(
                                                  "hidden",
                                        );
                              }
                              if (secretKey) {
                                        secretKey.classList.add("hidden");
                              }
                    };

                    window.toggleAccordion = toggleAccordion;
          });
</script>
